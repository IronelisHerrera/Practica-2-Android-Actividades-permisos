<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".given_permission">
    <TextView
            android:text="@string/storage_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/storage_activity_id"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="33dp"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toTopOf="@+id/location_activity_id"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="12sp"/>
    <TextView
            android:text="@string/location_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/location_activity_id"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/storage_activity_id"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp" android:layout_marginEnd="168dp" android:layout_marginRight="168dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="12sp"/>
    <TextView
            android:text="@string/camara_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/camara_activity_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/location_activity_id"
            android:textStyle="bold" android:textColor="@color/cardview_light_background" android:textSize="12sp"/>
    <TextView
            android:text="@string/phone_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phone_activity_id"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/camara_activity_id"
            android:textColor="@color/cardview_light_background" android:textStyle="bold" android:textSize="12sp"/>
    <TextView
            android:text="@string/contacts_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/contacts_activity_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/phone_activity_id"
            android:textColor="@color/cardview_light_background" android:textStyle="bold" android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>